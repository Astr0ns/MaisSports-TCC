    <link rel="stylesheet" href="css/codes/register.css">
    <link rel="stylesheet" href="css/codes/interface.css">

    <!-- Others Links -->

    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">


    <title>+Sports</title>
</head>

<body>

    <header>
        <nav>

            <a class="logo" href="/"><img src="imagem/LOGO.png"></a>
            <section class="box">
                <input type="checkbox" id="check">
                <section class="search-box">
                    <input type="text" placeholder="Pesquise aqui...">
                    <label for="check" class="icon">
                        <i class='bx bx-search'></i>
                    </label>
                </section>
            </section>

            <section class="mobile-menu">
                <section class="line1"></section>
                <section class="line2"></section>
                <section class="line3"></section>
            </section>

            <ul class="nav-list">
                <li>
                    <section class="trilho" id="trilho">
                        <section class="indicador"></section>
                    </section>
                </li>
                <li><a href="/">Inicio</a></li>
            </ul>
        </nav>
    </header>

    <section class="area-login">

        <section class="sub-og">
            <section class="login">

                <h1>REGISTRE-SE</h1>

                <form action="/fazerRegistro" method="post">
                    <section class="form-group">
                        <h3 class="lr">Digite seu primeiro nome</h3>
                        <label for="name"></label>
                        <input id="name" type="text" name="nome" placeholder="Digite seu nome" required>
                    </section>
                    <section class="form-group">
                        <h3 class="lr">Digite seu Sobrenome</h3>
                        <label for="sobrenome"></label>
                        <input id="sobrenome" type="text" name="sobrenome" placeholder="Digite seu Sobrenome" required>
                    </section>

                    <section class="form-group">
                        <h3 class="lr">Digite seu E-mail</h3>
                        <label for="email"></label>
                        <input id="email" type="text" name="email" placeholder="Digite seu email" required>
                        <section id="verify"></section>
                    </section>

                    <section class="form-group">
                        <h3 class="lr">Digite sua Senha</h3>
                        <label for="password"></label>
                        <input id="password" type="password" name="senha" placeholder="Digite sua senha" required
                            pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,20}"
                            title="Adicione no Minímo uma letra maiúscula, uma caracter especial e um número">
                    </section>
                    <section class="form-group">
                       
                                <h3 class="lr"><span>Confirme</span> sua Senha</h3>
                                <label for="password"></label>
                                <input id="c-password" type="password" name="cSenha" placeholder="Confirme sua senha"
                                    required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,20}"
                                    title="Adicione no Minímo uma letra maiúscula, uma caracter especial e um número">
                    </section>

                    <section class="form-group">

                    </section>

                    <section class="form-group">
                        <section class="dica">
                            <h3>Adicione no Minímo uma letra maiúscula, uma caracter especial e um número</h3>
                        </section>
                        <section class="dica">
                            <% if (messages.msg && messages.msg.length > 0) { %>
                                <h3><%= messages.msg %></h3>
                            <% } %>
                        </section>

                    </section>

                    <section class="text-center">
                        <button type="submit" class="btn btn-primary" id="save-btn" required>Cadastrar</button>
                    </section>
                    <section id="valid-sucess">

                    </section>

                </form>


                <p>Já tem uma conta?<a href="/login">Faça Login</a>.</p>


            </section>
        </section>
    </section>

    <%- include("../partial/footer") %>

        <script src="js/script.js"></script>
        <script src="js/notify.js"></script>
        <script src="js/toggleMode.js"></script>
</body>

</html>